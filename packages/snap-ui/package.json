{
    "name": "@slo/snap-ui",
    "version": "1.0.0",
    "description": "SnapUI Design System - Shared component library for SnapLabs Global",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./styles": "./styles/index.css",
        "./tokens": "./tokens/index.ts"
    },
    "scripts": {
        "build": "tsc && npm run build:css",
        "build:css": "cat styles/*.css > dist/styles.css",
        "dev": "tsc --watch",
        "lint": "eslint .",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "framer-motion": "^10.18.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^7.6.21",
        "@storybook/react": "^7.6.21",
        "@testing-library/react": "^14.3.1",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "typescript": "^5.9.3",
        "vitest": "^1.6.1"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    }
}