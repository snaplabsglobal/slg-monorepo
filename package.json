{
    "name": "slo-monorepos",
    "version": "1.0.0",
    "private": true,
    "description": "SnapLabs Global - Unified Frontend Monorepo",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "type-check": "turbo run type-check",
        "clean": "turbo run clean && rm -rf node_modules",
        "prepare": "husky install",
        "check": "pnpm type-check && pnpm build",
        "check-before-push": "pnpm type-check && pnpm build && pnpm lint",
        "quick-check": "pnpm type-check",
        "deploy:watch": "git push origin dev && ./scripts/deploy-monitor.sh",
        "deploy:fix": "./scripts/auto-fix.sh",
        "enqueue-cloud-rescan": "tsx scripts/enqueue-cloud-rescan.ts"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "@types/node": "^20.19.30",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "prettier": "^3.8.1",
        "turbo": "^1.13.4",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=9.0.0"
    },
    "packageManager": "pnpm@8.15.0",
    "dependencies": {
        "@slo/snap-types": "workspace:^"
    }
}