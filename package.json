{
    "name": "slo-monorepos",
    "version": "1.0.0",
    "private": true,
    "description": "SnapLabs Global - Unified Frontend Monorepo",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "type-check": "turbo run type-check",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "turbo": "^1.11.0",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=9.0.0"
    },
    "packageManager": "pnpm@8.10.0"
}