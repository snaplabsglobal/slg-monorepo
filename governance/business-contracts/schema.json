{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Business Contract Schema",
  "type": "object",
  "required": ["id", "name", "category", "severity", "enforced", "gate", "given", "when", "then"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "category": { "type": "string" },
    "severity": { "type": "string", "enum": ["P0", "P1", "P2"] },
    "enforced": { "type": "boolean" },
    "gate": { "type": "string" },
    "scope": {
      "type": "object",
      "properties": {
        "runtime_env": { "type": "array", "items": { "type": "string" } },
        "roles": { "type": "array", "items": { "type": "string" } },
        "browsers": { "type": "array", "items": { "type": "string" } }
      }
    },
    "config": { "type": "object" },
    "given": { "type": "array", "items": { "type": "string" } },
    "when": { "type": "array", "items": { "type": "string" } },
    "then": { "type": "array", "items": { "type": "string" } },
    "invariants": {
      "type": "object",
      "properties": {
        "forbidden": { "type": "array", "items": { "type": "string" } },
        "must_hold": { "type": "array", "items": { "type": "string" } }
      }
    },
    "proof_pack_required": { "type": "array", "items": { "type": "string" } },
    "observability": {
      "type": "object",
      "properties": {
        "telemetry_events_required": { "type": "array", "items": { "type": "string" } },
        "console_error_blocklist": { "type": "array", "items": { "type": "string" } }
      }
    },
    "source": {
      "type": "object",
      "properties": {
        "source_incident": { "type": "string" },
        "owner": { "type": "string" },
        "reviewer": { "type": "string" }
      }
    }
  }
}
